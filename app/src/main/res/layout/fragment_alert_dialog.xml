<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_alert_dialog_layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alert_dialog_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_big"
    android:paddingStart="@dimen/margin_normal"
    android:paddingEnd="@dimen/margin_normal"
    android:paddingTop="@dimen/padding_big">

    <TextView
        android:id="@+id/fragment_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:textColor="@color/hd_text_grey"
        android:textSize="@dimen/text_title"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/fragment_alert_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_normal"
        android:gravity="center"
        android:textColor="@color/hd_text_grey"
        android:textSize="@dimen/text_normal"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/fragment_alert_dialog_positive"
        style="@style/Button.Red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/fragment_alert_dialog_negative"
        style="@style/Button.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/fragment_alert_dialog_neutral"
        style="@style/Button.Link.Dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>